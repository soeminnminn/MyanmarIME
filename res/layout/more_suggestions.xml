<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="?attr/moreKeysKeyboardPanelStyle"
        >
    <com.androidtweak.inputmethod.myanmar.suggestions.MoreSuggestionsView
            xmlns:soft="http://schemas.android.com/apk/res/com.androidtweak.inputmethod.myanmar"
            android:id="@+id/more_suggestions_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            soft:keyLetterSize="@dimen/suggestion_text_size"
            soft:keyLabelSize="@dimen/suggestion_text_size"
            soft:keyHintLetterRatio="@fraction/more_suggestions_info_ratio"
            soft:keyHintLetterColor="@android:color/white"
            />
</LinearLayout>
