<merge
    xmlns:soft="http://schemas.android.com/apk/res/com.androidtweak.inputmethod.myanmar"
>
    <switch>
        <case
            soft:languageCode="fa"
            soft:languageSwitchKeyEnabled="true"
        >
            <Key
                soft:keyStyle="languageSwitchKeyStyle" />
            <Key
                soft:keyStyle="spaceKeyStyle"
                soft:keyWidth="27.0%p" />
            <Key
                soft:keyStyle="zwnjKeyStyle" />
        </case>
        <case
            soft:languageCode="fa"
            soft:languageSwitchKeyEnabled="false"
        >
            <Key
                soft:keyStyle="spaceKeyStyle"
                soft:keyWidth="36.0%p" />
            <Key
                soft:keyStyle="zwnjKeyStyle" />
        </case>
        <case
            soft:languageSwitchKeyEnabled="true"
        >
            <Key
                soft:keyStyle="languageSwitchKeyStyle" />
            <Key
                soft:keyStyle="spaceKeyStyle"
                soft:keyWidth="36.0%p" />
        </case>
        <!-- languageSwitchKeyEnabled="false" -->
        <default>
            <Key
                soft:keyStyle="spaceKeyStyle"
                soft:keyWidth="45.0%p" />
        </default>
    </switch>
</merge>
