<merge
    xmlns:soft="http://schemas.android.com/apk/res/com.androidtweak.inputmethod.myanmar"
>
    <include
        soft:keyboardLayout="@xml/key_styles_common" />
    <include
        soft:keyboardLayout="@xml/key_styles_number" />
    <Row>
        <Key
            soft:keyLabel="-"
            soft:keyStyle="numKeyStyle"
            soft:keyWidth="10%p"
            soft:backgroundType="functional" />
        <Key
            soft:keyLabel="+"
            soft:keyStyle="numKeyStyle"
            soft:keyWidth="10%p"
            soft:backgroundType="functional" />
        <Key
            soft:keyStyle="numPauseKeyStyle"
            soft:keyWidth="10%p"
            soft:backgroundType="functional" />
        <Key
            soft:keyStyle="num1KeyStyle"
            soft:keyXPos="31%p" />
        <Key
            soft:keyStyle="num2KeyStyle" />
        <Key
            soft:keyStyle="num3KeyStyle" />
        <Key
            soft:keyStyle="deleteKeyStyle"
            soft:keyXPos="-14%p"
            soft:keyWidth="fillRight" />
    </Row>
    <Row>
        <Key
            soft:keyLabel=","
            soft:keyStyle="numKeyStyle"
            soft:keyWidth="10%p"
            soft:backgroundType="functional" />
        <Key
            soft:keyLabel="."
            soft:keyStyle="numKeyStyle"
            soft:keyWidth="10%p"
            soft:backgroundType="functional" />
        <Key
            soft:keyStyle="numWaitKeyStyle"
            soft:keyWidth="10%p"
            soft:backgroundType="functional" />
        <Key
            soft:keyStyle="num4KeyStyle"
            soft:keyXPos="31%p" />
        <Key
            soft:keyStyle="num5KeyStyle" />
        <Key
            soft:keyStyle="num6KeyStyle" />
        <Key
            soft:keyStyle="enterKeyStyle"
            soft:keyXPos="-14%p"
            soft:keyWidth="fillRight" />
    </Row>
    <Row>
        <Key
            soft:keyLabel="("
            soft:keyStyle="numKeyStyle"
            soft:keyWidth="10%p"
            soft:backgroundType="functional" />
        <Key
            soft:keyLabel=")"
            soft:keyStyle="numKeyStyle"
            soft:keyWidth="10%p"
            soft:backgroundType="functional" />
        <Key
            soft:keyLabel="N"
            soft:keyStyle="numKeyStyle"
            soft:keyWidth="10%p"
            soft:backgroundType="functional" />
        <Key
            soft:keyStyle="num7KeyStyle"
            soft:keyXPos="31%p" />
        <Key
            soft:keyStyle="num8KeyStyle" />
        <Key
            soft:keyStyle="num9KeyStyle" />
        <!-- Note: This Spacer prevents the above key from being marked as a right edge key. -->
        <Spacer />
    </Row>
    <Row>
        <Key
            soft:keyStyle="spaceKeyStyle"
            soft:keyWidth="30%p"
            soft:backgroundType="functional" />
        <Key
            soft:keyStyle="numStarKeyStyle"
            soft:keyXPos="31%p" />
        <Key
            soft:keyStyle="num0KeyStyle" />
        <Key
            soft:keyLabel="#"
            soft:keyStyle="numKeyStyle" />
    </Row>
</merge>
