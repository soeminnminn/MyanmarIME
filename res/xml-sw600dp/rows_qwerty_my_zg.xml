<merge
    xmlns:soft="http://schemas.android.com/apk/res/com.androidtweak.inputmethod.myanmar"
>
    <include
        soft:keyboardLayout="@xml/key_styles_common" />
	<Row
		soft:keyWidth="9.0%p"
	>
		<include
			soft:keyboardLayout="@xml/rowkeys_qwerty_my_zg1" />
		<Key
			soft:keyStyle="deleteKeyStyle"
			soft:keyWidth="fillRight" />
	</Row>
	<Row
		soft:keyWidth="9.0%p"
	>
		<include
			soft:keyboardLayout="@xml/rowkeys_qwerty_my_zg2" />
		<Key
			soft:keyStyle="enterKeyStyle"
			soft:keyWidth="fillRight" />
	</Row>
	<Row
		soft:keyWidth="9.0%p"
	>
		<Key
			soft:keyStyle="toggleShiftKeyStyle"
			soft:keyWidth="10.0%p" />
		<include
			soft:keyboardLayout="@xml/rowkeys_qwerty_my_zg3" />
		<Key
			soft:keyStyle="toggleShiftKeyStyle"
			soft:keyWidth="fillRight" />
	</Row>
    <Row
        soft:keyWidth="9.0%p"
		soft:backgroundType="functional"
    >
        <Key
            soft:keyStyle="toSymbolKeyStyle"
            soft:keyWidth="10.0%p" />
        <include
            soft:keyboardLayout="@xml/key_shortcut" />
        <include
            soft:keyboardLayout="@xml/key_f1" />
        <include
			soft:keyXPos="28.0%p"
			soft:keyboardLayout="@xml/key_space"
            soft:backgroundType="normal" />
        <include
            soft:keyboardLayout="@xml/key_my_sign_section" />
        <include
            soft:keyboardLayout="@xml/key_dash" />
        <include
            soft:keyboardLayout="@xml/key_f2" />
    </Row>
</merge>
