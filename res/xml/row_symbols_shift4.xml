<merge
    xmlns:soft="http://schemas.android.com/apk/res/com.androidtweak.inputmethod.myanmar"
>
    <Row
        soft:keyWidth="10%p"
    >
        <Key
            soft:keyStyle="toAlphaKeyStyle"
            soft:keyWidth="15%p" />
        <!-- U+201F: "‟" DOUBLE HIGH-REVERSED-9 QUOTATION MARK -->
        <!-- TODO: Neither DroidSans nor Roboto have the glyph for U+201F DOUBLE HIGH-REVERSED-9 QUOTATION MARK. -->
        <!-- soft:keyLabelFlags="hasPopupHint" -->
        <!-- soft:moreKeys="&#x201F;" -->
        <!-- U+201E: "„" DOUBLE LOW-9 QUOTATION MARK -->
        <Key
            soft:keyLabel="&#x201E;"
            soft:backgroundType="functional" />
        <include
            soft:keyXPos="25%p"
            soft:keyboardLayout="@xml/key_space" />
        <!-- U+2026: "…" HORIZONTAL ELLIPSIS -->
        <Key
            soft:keyLabel="&#x2026;"
            soft:backgroundType="functional" />
        <Key
            soft:keyStyle="enterKeyStyle"
            soft:keyWidth="fillRight" />
    </Row>
</merge>
