<KeyboardLayoutSet
    xmlns:soft="http://schemas.android.com/apk/res/com.androidtweak.inputmethod.myanmar">
    <Element
        soft:elementName="alphabet"
        soft:elementKeyboard="@xml/kbd_qwerty_my_zg"
        soft:enableProximityCharsCorrection="true" />
    <Element
        soft:elementName="alphabetAutomaticShifted"
        soft:elementKeyboard="@xml/kbd_qwerty_my_zg"
        soft:enableProximityCharsCorrection="true" />
    <!-- On these shifted alphabet layouts the proximity characters correction should be disabled
         because the letters on these layouts aren't the ones in different case of the above
         unshifted layouts. -->
    <Element
        soft:elementName="alphabetManualShifted"
        soft:elementKeyboard="@xml/kbd_qwerty_my_zg" />
    <Element
        soft:elementName="alphabetShiftLocked"
        soft:elementKeyboard="@xml/kbd_qwerty_my_zg" />
    <Element
        soft:elementName="alphabetShiftLockShifted"
        soft:elementKeyboard="@xml/kbd_qwerty_my_zg" />
    <Element
        soft:elementName="symbols"
        soft:elementKeyboard="@xml/kbd_symbols_my_zg" />
    <Element
        soft:elementName="symbolsShifted"
        soft:elementKeyboard="@xml/kbd_symbols_shift_my_zg" />
    <Element
        soft:elementName="phone"
        soft:elementKeyboard="@xml/kbd_phone" />
    <Element
        soft:elementName="phoneSymbols"
        soft:elementKeyboard="@xml/kbd_phone_symbols" />
    <Element
        soft:elementName="number"
        soft:elementKeyboard="@xml/kbd_number" />
</KeyboardLayoutSet>
