<merge
    xmlns:soft="http://schemas.android.com/apk/res/com.androidtweak.inputmethod.myanmar"
>
    <Row
        soft:keyWidth="10%p"
    >
        <Key
            soft:keyStyle="toAlphaKeyStyle"
            soft:keyWidth="15%p" />
        <switch>
            <case
                soft:hasShortcutKey="true"
            >
                <Key
                    soft:keyStyle="shortcutKeyStyle" />
            </case>
            <!-- soft:hasShortcutKey="false" -->
            <default>
                <Key
                    soft:keyLabel="!text/keylabel_for_comma"
                    soft:keyLabelFlags="hasPopupHint"
                    soft:additionalMoreKeys="!text/more_keys_for_comma"
                    soft:keyStyle="f1MoreKeysStyle" />
            </default>
        </switch>
        <include
            soft:keyXPos="25%p"
            soft:keyboardLayout="@xml/key_space" />
        <Key
            soft:keyStyle="punctuationKeyStyle" />
        <Key
            soft:keyStyle="enterKeyStyle"
            soft:keyWidth="fillRight" />
    </Row>
</merge>
