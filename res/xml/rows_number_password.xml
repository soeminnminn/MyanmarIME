<merge
    xmlns:soft="http://schemas.android.com/apk/res/com.androidtweak.inputmethod.myanmar"
>
    <Row>
        <!-- Note: This Spacer prevents the below key from being marked as a left edge key. -->
        <Spacer
            soft:keyWidth="10%p" />
        <Key
            soft:keyStyle="num1KeyStyle" />
        <Key
            soft:keyStyle="num2KeyStyle" />
        <Key
            soft:keyStyle="num3KeyStyle" />
        <!-- Note: This Spacer prevents the above key from being marked as a right edge key. -->
        <Spacer
            soft:keyWidth="fillRight" />
    </Row>
    <Row>
        <!-- Note: This Spacer prevents the below key from being marked as a left edge key. -->
        <Spacer
            soft:keyWidth="10%p" />
        <Key
            soft:keyStyle="num4KeyStyle" />
        <Key
            soft:keyStyle="num5KeyStyle" />
        <Key
            soft:keyStyle="num6KeyStyle" />
        <!-- Note: This Spacer prevents the above key from being marked as a right edge key. -->
        <Spacer
            soft:keyWidth="fillRight" />
    </Row>
    <Row>
        <!-- Note: This Spacer prevents the below key from being marked as a left edge key. -->
        <Spacer
            soft:keyWidth="10%p" />
        <Key
            soft:keyStyle="num7KeyStyle" />
        <Key
            soft:keyStyle="num8KeyStyle" />
        <Key
            soft:keyStyle="num9KeyStyle" />
        <!-- Note: This Spacer prevents the above key from being marked as a right edge key. -->
        <Spacer
            soft:keyWidth="fillRight" />
    </Row>
    <Row>
        <!-- Note: This Spacer prevents the below key from being marked as a left edge key. -->
        <Spacer
            soft:keyWidth="10%p" />
        <Key
            soft:keyStyle="deleteKeyStyle" />
        <Key
            soft:keyStyle="num0KeyStyle" />
        <Key
            soft:keyStyle="enterKeyStyle" />
        <!-- Note: This Spacer prevents the above key from being marked as a right edge key. -->
        <Spacer
            soft:keyWidth="fillRight" />
    </Row>
</merge>
